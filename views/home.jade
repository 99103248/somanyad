          .panel.panel-default
            .panel-heading #{__("免费 (十天一续)")}
            .panel-body
              p #{__("转发量: 不限")}
              p #{__("废弃地址：不限")}
              p #{__("转发目的地：不限")}
              p #{__("绑定域名个数：不限")}
              p
                a.btn.btn-success(href='/members/') #{__("马上使用")}
        .col-md-4
          .panel.panel-success
            .panel-heading #{__("收费 ( 10 RMB/年)")}
            .panel-body
              p #{__("转发量: 不限")}
              p #{__("废弃地址：不限")}
              p #{__("转发目的地：不限")}
              p #{__("绑定域名个数：不限")}
              p
                a.btn.btn-success(href='/members/') #{__("马上使用")}
