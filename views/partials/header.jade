.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only #{__("导航")}
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='http://somanyad.com/')
        i.fa.fa-envelope-o
        | SoManyAD
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=title=='Home'?'active':undefined).page-scroll
          a(href=title=='Home'?'#home':'/#home' ) #{__('首页')}
        li(class=title=='Product'?'active':undefined).page-scroll
          a(href=title=='Issue'?'#issue':'/#issue') #{__('问题')}
        li(class=title=='Product'?'active':undefined).page-scroll
          a(href=title=='Home'?'#product':'/#product') #{__('产品')}
        li(class=title=='Price'?'active':undefined).page-scroll
          a(href=title=='Home'?'#price':'/#price') #{__('价格')}
        //- li(class=title=='API Examples'?'active':undefined)
        //-   a(href='/api') API Examples
        li(class=title=='Contact'?'active':undefined).page-scroll.dropdown
          a(href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false").dropdown-toggle
            | #{__('联系我们')}
            span.caret
            ul.dropdown-menu
              li
                a(href="http://weibo.com/ruandao/home?wvr=5", target="_blank") 微博: ruandao
              li(role="separator").divider
              li
                a(href="mailto:contact@somanyad.com", target="_blank")  邮箱(点击即可)
              li(role="separator").divider
              li
                a(href="#")  微信搜索:
                  span 13928483788

      ul.nav.navbar-nav.navbar-right
        if user
          li(class=title=='Members'?'active':undefined)
            a(href='http://somanyad.com/members') #{__('费用')}
          li(class=title=='Domains'?'active':undefined)
            a(href='/domains') #{__('我的域名')}
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') #{__('登录')}
          li(class=title=='Create Account'?'active':undefined)
            a(href='/signup') #{__('注册')}
        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') #{__('账号')}
              li.divider
              li
                a(href='/logout') #{__('退出')}
