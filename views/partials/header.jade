.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-envelope-o
        | SoManyAD
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=title=='Home'?'active':undefined).page-scroll
          a(href='#home') #{__('首页')}
        li(class=title=='Price'?'active':undefined).page-scroll
          a(href='#price') #{__('价格')}
        li(class=title=='Product'?'active':undefined).page-scroll
          a(href='#product') #{__('产品')}
        //- li(class=title=='API Examples'?'active':undefined)
        //-   a(href='/api') API Examples
        li(class=title=='Contact'?'active':undefined).page-scroll
          a(href='#contact') #{__('联系我们')}


          
      ul.nav.navbar-nav.navbar-right
        if domains
          li(class=title=='My Domains'?'active':undefined)
            a(href='/domains') #{__('我的域名')}      
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') #{__('登陆')}
          li(class=title=='Create Account'?'active':undefined)
            a(href='/signup') #{__('注册')}
        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              //- if user.profile.picture
              //-   img(src='#{user.profile.picture}')
              //- else
              //-   img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') #{__('账号')}
              li.divider
              li
                a(href='/logout') #{__('退出')}
