extends index

block domains-content
  table.table.table-striped.table-hover
    thead
      tr
        th #
        th 域名
        th 转发策略
        th 收件箱
        th 编辑
    tbody
      for domain, idx in domains
        tr
          td #{idx}
          td #{domain.domain}
          td #{domain.forward_type}
          td #{domain.forward_email || '未设置'}
          td 
            a(href="/domains/setup?domain=" + domain.domain).btn.btn-info.btn-xs 设置            
  a(href="/domains/addNewDomain").btn.btn-success 添加新域名
