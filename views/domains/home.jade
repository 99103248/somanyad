extends index

block domains-content
  .container
    .row
      .col-md-12
        table.table.table-striped.table-bordered
          caption
            .row
              .col-md-2
                h3.pull-left 我的域名邮箱
              .col-md-1
                a.pull-left(href="/domains/addNewDomain") 添加
          thead
            tr
              th.name 域名
              th.cnameVerifyStatus 验证所有权
              th.mx MX记录
              th.forward_email 转发到
              th.fee_plan 可用额度
              th.operation 操作
          tbody
            for domain in domains
              tr
                th.name #{domain.domain}
                if domain.cnameVerifyStatus
                  th.cnameVerifyStatus #{domain.cnameVerifyStatus}
                else
                  th.cnameVerifyStatus 
                    | 尚未通过
                    a(href="#") 手动验证
                if domain.mxVerifyStatus
                  th.mx #{domain.mx}
                else
                  th.mx
                    | 未设置或暂未生效
                    a(href="#") 如何设置
                th.forward_email #{domain.email}
                th.fee_plan #{domain.fee_plan}
                th.operation 注销
            
            
  
