extends ../layout

block content
  .col-sm-8.col-sm-offset-2
    form(method='POST')
      legend #{__("重置密码")}
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label(for='password') #{__("新密码")}
        input.form-control(type='password', name='password', value='', placeholder='#{__("新密码")}', autofocus=true)
      .form-group
        label(for='confirm') #{__("确认密码")}
        input.form-control(type='password', name='confirm', value='', placeholder='#{__("确认密码")}')
      .form-group
        button.btn.btn-primary.btn-reset(type='submit')
          i.fa.fa-keyboard-o
          | #{__("修改密码")}
